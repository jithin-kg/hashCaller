    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.nibble.hashcaller.view.ui.MainActivity">

    <FrameLayout
        android:id="@+id/frame_fragmentholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
       >

