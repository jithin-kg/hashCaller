<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutContainerMsgOutbox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">
    <!--  !!IMPORTANT  I should ser layout_width=0dp and
    app:layout_constraintWidth_default="wrap"  to avoid text  overflow
    out of the screen-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/childOutbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/runded_rectangular_blue_chat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.90"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintWidth_max="wrap">

        <!--    android:maxWidth to set max width-->

        <TextView
            android:id="@+id/tvSentMsgOutbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/roboto"
            android:letterSpacing="0.1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="hi man, how are you?"
            android:textColor="#ffffff"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvSenttimeOutbox"
            app:layout_constraintHorizontal_bias="0.012"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toStartOf="@id/childOutbox"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="wrap" />

        <TextView
            android:id="@+id/tvSenttimeOutbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/roboto"
            android:letterSpacing="0.1"
            android:text="TextView"
            android:textColor="#ffffff"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/tvSentMsgOutbox"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintWidth_default="wrap" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvSendingOutbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dotedPgSMSSengingOutbox"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/childOutbox"
        app:layout_constraintVertical_bias="0.0" />

    <com.nibble.hashcaller.view.utils.HorizontalDottedProgress
        android:id="@+id/dotedPgSMSSengingOutbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tvSMSSimOutbox"
        app:layout_constraintEnd_toStartOf="@+id/tvSMSSimOutbox"
        app:layout_constraintStart_toEndOf="@+id/tvSendingOutbox"
        app:layout_constraintTop_toTopOf="@+id/tvSendingOutbox"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvSMSSimOutbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvSendingOutbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/dotedPgSMSSengingOutbox" />
</androidx.constraintlayout.widget.ConstraintLayout>