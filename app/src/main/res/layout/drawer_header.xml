<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:background="@color/colorBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgViewAvatarMain"
        android:layout_width="@dimen/avatar_side_drawer"
        android:layout_height="@dimen/avatar_side_drawer"
        android:layout_marginTop="64dp"
        android:background="@drawable/contact_circular_background_grey"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circular_avatar_main_background"/>


    <TextView
        android:id="@+id/tvFirstLetterMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="J"
        android:textColor="@color/colorWhite"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgViewAvatarMain"
        app:layout_constraintEnd_toEndOf="@+id/imgViewAvatarMain"
        app:layout_constraintStart_toStartOf="@+id/imgViewAvatarMain"
        app:layout_constraintTop_toTopOf="@+id/imgViewAvatarMain" />

    <TextView
        android:id="@+id/tvNavDrawerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Jithin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgViewAvatarMain" />
</androidx.constraintlayout.widget.ConstraintLayout>