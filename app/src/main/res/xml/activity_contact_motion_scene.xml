<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start">
        <OnSwipe
            motion:onTouchUp="autoComplete"
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/scrollView" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/tvName"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/ivAvatar"
            motion:layout_goneMarginBottom="40dp"
            motion:layout_editor_absoluteX="254dp"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />
        <Constraint
            android:id="@+id/imgBtnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp" />
        <Constraint
            android:id="@+id/textViewPhoneNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/tvName"
            android:layout_marginTop="32dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"

            />
        <Constraint
            android:id="@+id/txtViewNumber"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            motion:layout_constraintHorizontal_bias="0.498"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/tvName"
             />
        <Constraint
            motion:layout_constraintWidth_percent=".28"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="150dp"
            android:layout_height="150dp"
            motion:layout_constraintDimensionRatio="1"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/ivAvatar"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:visibility="visible" />
        <Constraint
            motion:layout_constraintWidth_percent=".28"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="150dp"
            android:layout_height="150dp"
            motion:layout_constraintDimensionRatio="1"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tvFirstLetter"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/tvisInContact"
            android:id="@+id/tvSimCardInfo"
            motion:layout_constraintBottom_toBottomOf="parent" />

        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSimCardInfo"
            motion:layout_constraintTop_toBottomOf="@+id/tvisInContact"
            motion:layout_constraintBottom_toBottomOf="parent" />
<!--        <Constraint-->
<!--            motion:layout_constraintStart_toStartOf="@+id/imgBtnCallIndividualContact"-->
<!--            android:id="@+id/tvCallBtnInfo" />-->
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            android:id="@+id/imgBtnBack"
            android:layout_marginLeft="16dp" />
        <Constraint
            android:id="@+id/ivAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            motion:layout_constraintBottom_toBottomOf="@+id/imgBtnBack"
            motion:layout_constraintDimensionRatio="1"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@id/imgBtnBack"
            motion:layout_constraintTop_toTopOf="@id/imgBtnBack"
            motion:layout_constraintVertical_bias="0.672"
            motion:layout_constraintHorizontal_bias="0.04"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp" />
        <Constraint
            android:id="@+id/tvFirstLetter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textSize="34sp"
            motion:layout_constraintBottom_toBottomOf="@+id/imgBtnBack"
            motion:layout_constraintDimensionRatio="1"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@id/imgBtnBack"
            motion:layout_constraintTop_toTopOf="@id/imgBtnBack"
            motion:layout_constraintVertical_bias="0.656"
            motion:layout_constraintHorizontal_bias="0.04"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"/>
        <Constraint
            android:id="@+id/tvName"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/ivAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/ivAvatar"
            motion:layout_constraintTop_toTopOf="@+id/ivAvatar"
            android:gravity="left"
            android:layout_marginStart="16dp"
            motion:layout_goneMarginBottom="40dp"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintVertical_bias="0.4" />
        <Constraint
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="18dp"
            motion:layout_constraintTop_toBottomOf="@+id/ivAvatar"
            android:layout_marginTop="16dp"
            android:id="@+id/scrollView" />
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            motion:layout_editor_absoluteX="138dp"
            android:id="@+id/txtViewNumber"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/imgBtnCallIndividualContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            motion:layout_editor_absoluteX="189dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />

        <Constraint
            android:id="@+id/imgBtnBlockIndividualContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            motion:layout_editor_absoluteX="189dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />
        <Constraint
            android:id="@+id/imgBtnUnblockICntct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            motion:layout_editor_absoluteX="189dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />
        <Constraint
            android:id="@+id/tvBlockBtnInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            motion:layout_editor_absoluteX="189dp"
            motion:layout_constraintTop_toTopOf="@+id/imgBtnBlockIndividualContact"
            android:layout_marginTop="16dp" />
        <Constraint
            android:id="@+id/tvCallBtnInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            motion:layout_editor_absoluteX="189dp"
            motion:layout_constraintTop_toTopOf="@+id/imgBtnCallIndividualContact"
            android:layout_marginTop="16dp" />
        <Constraint
            android:id="@+id/tvSMSBtnInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            motion:layout_editor_absoluteX="189dp"
            motion:layout_constraintTop_toTopOf="@+id/imgBtnSMS"
            android:layout_marginTop="16dp" />
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            motion:layout_editor_absoluteX="104dp"
            android:id="@+id/imgBtnSMS"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />
    </ConstraintSet>
    <!--    <Transition-->
    <!--        motion:constraintSetEnd="@+id/end"-->
    <!--        motion:constraintSetStart="@id/start">-->
    <!--        <OnSwipe-->
    <!--            motion:onTouchUp="autoComplete"-->
    <!--            motion:dragDirection="dragUp"-->
    <!--            motion:touchAnchorId="@id/scrollView" />-->
    <!--    </Transition>-->
</MotionScene>